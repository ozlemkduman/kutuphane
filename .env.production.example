# ============================================
# PRODUCTION ENVIRONMENT VARIABLES
# ============================================
# Bu dosyayı .env.production olarak kopyalayın ve değerleri doldurun
# Sunucuda: cp .env.production.example .env.production

# ============================================
# DOMAIN (Zorunlu)
# ============================================
DOMAIN=kutuphane.example.com
API_DOMAIN=api.kutuphane.example.com

# ============================================
# DATABASE (Zorunlu)
# ============================================
DB_USER=kutuphane
DB_PASSWORD=GÜÇLÜ_BİR_ŞİFRE_OLUŞTURUN
DB_NAME=kutuphane_db

# ============================================
# CORS (Zorunlu)
# ============================================
CORS_ORIGINS=https://kutuphane.example.com

# ============================================
# NEXT.JS PUBLIC (Zorunlu - Build time)
# ============================================
NEXT_PUBLIC_API_URL=https://api.kutuphane.example.com
NEXT_PUBLIC_FIREBASE_API_KEY=your-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id

# ============================================
# FIREBASE ADMIN (Zorunlu - API)
# ============================================
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
# Private key'i tek satırda, \n ile yazın:
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nMIIEvgIBADA...\n-----END PRIVATE KEY-----\n"

# ============================================
# ENCRYPTION (Zorunlu - SMTP şifreleme)
# ============================================
# Oluşturmak için: openssl rand -hex 32
ENCRYPTION_KEY=your-32-char-hex-encryption-key

# ============================================
# EMAIL (Opsiyonel - Admin panelden de ayarlanabilir)
# ============================================
# Okul bazlı SMTP ayarları admin panelden yapılır
